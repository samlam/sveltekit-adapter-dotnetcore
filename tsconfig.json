{
	"compilerOptions": {
		"allowJs": false,
		"checkJs": false,
		"noEmit": true,
		"noImplicitAny": true,
		"target": "es2020",
		"module": "es2020",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"lib": [
			"es2020"
		],
		"types": ["node"]
	},
	"include": [
		"src/*.ts",
		"index.ts"
	]
}
