{
	"compilerOptions": {
		"allowJs": false,
		"checkJs": false,
		"noEmit": true,
		"noImplicitAny": true,
		"target": "es2020",
		"module": "es2020",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"lib": [
			"es2020",
			"DOM"
		],
		"types": ["node", "@sveltejs/kit"]
	},
	"include": [
		"src/*.ts",
		"index.ts",
		"*.d.ts"
	]
}
